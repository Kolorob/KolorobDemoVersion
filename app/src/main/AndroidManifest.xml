<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="demo.kolorob.kolorobdemoversion" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.OpeningActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LocationAskActivity"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".activity.LocationInstructionActivity"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".activity.ButtonClickBaunia"
            android:label="@string/title_activity_button_click_baunia" >
        </activity>
        <activity android:name=".activity.PlaceChoiceActivity" />
        <activity android:name=".activity.PlaceDetailsActivity" />

    </application>

</manifest>
