<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="demo.kolorob.kolorobdemoversion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.OpeningActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LocationAskActivity"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".Activity.LocationInstructionActivity"
            android:theme="@style/Theme.Transparent" />
        <activity android:name=".Activity.PlaceChoiceActivity"></activity>
    </application>

</manifest>
